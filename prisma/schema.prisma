generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @unique @default(autoincrement())
  name       String
  email      String     @unique
  password   String
  code       String?    @unique
  whatsapp   String     @unique
  cep        String
  logradouro String
  bairro     String
  numero     String
  estado     String
  cidade     String
  img   String? @default("https://pps.whatsapp.net/v/t61.24694-24/379791944_1391491581496072_557151506134818581_n.jpg?ccb=11-4&oh=01_AdQDSJU7Ys_nPI8VUKSnj3ukWdm0BT-cKobTQV3mjvfpjA&oe=65FED0C6&_nc_sid=e6ed6c&_nc_cat=102")
  Instance   Instance[]
}

model Instance {
  id     Int    @id @unique @default(autoincrement())
  name   String @unique
  apikey String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  
}

model Plans {
  id          Int     @id @unique @default(autoincrement())
  plans       String
  description String
  valor       Decimal
  garcon      Boolean
  cozinha     Boolean
  cardapio    Boolean
  whatsapp    Boolean
  qrcodemesa  Boolean
  
}


