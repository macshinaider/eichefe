generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id         Int     @id @unique @default(autoincrement())
  name       String
  email      String  @unique
  password   String
  code       String? @unique
  whatsapp   String  @unique
  cep        String
  logradouro String
  bairro     String
  numero     String
  estado     String
  cidade     String
}

model Plans {
  id          Int     @id @unique @default(autoincrement())
  plans       String
  description String
  valor       Decimal
  garcon      Boolean
  cozinha     Boolean
  cardapio    Boolean
  whatsapp    Boolean
  qrcodemesa  Boolean
}